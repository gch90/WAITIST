
    <div class="form-inputs">
      <%= f.input :first_name,
                  required: false,
                  input_html: { autocomplete: "first_name" }%>
      <%= f.input :last_name,
                  required: false,
                  input_html: { autocomplete: "last_name" }%>
      <%= f.input :address,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "address" }%>
      <%= f.input :phone,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "phone" }%>
      <%= f.input :summary,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "summary" }%>
      <%= f.input :avatar, as: :file %>


    </div>
