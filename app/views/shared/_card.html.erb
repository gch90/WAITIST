

<%# Descide the amount of times the rate logo should reapere depending on the price %>
<% if resto.rate <= 16 %>
  <% @rate_count = 1 %>
<% elsif resto.rate > 16 && resto.rate <= 21 %>
  <% @rate_count = 2 %>
<% else %>
  <% @rate_count = 3 %>
<% end %>

<%# card %>
<%= link_to restaurant_path(resto) do %>
<div class="card">
  <div class="card-head">
    <% if resto.photos.attached? %>
      <%= cl_image_tag resto.photos[0].key %>
      <div class="rating">
        <h3>5.4</h3>
      </div>
    <% else %>
      <div class="rating">
        <h3>5.4</h3>
      </div>
    <% end %>
  </div>

  <div class="card-body">
      <h3 class="name"><%= resto.restaurant_name %></h3>
    <div class="desc">
      <p class="short-summary"><strong><%= resto.summary %></strong></p>
      <p class="location"><%= render 'icons/location' %><%= resto.address %></p>
      <div class="card-foot">
        <p class="type"><%= render 'icons/info' %><%= resto.restaurant_type %></p>
        <p class="rate">
          <% @rate_count.times do %>
            <%= render 'icons/rate'%>
          <% end %>
        </p>
      </div>
    </div>
  </div>

</div>
<% end %>
