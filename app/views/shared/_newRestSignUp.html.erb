<div class="form-inputs">
  <%= f.input :restaurant_name,
              required: false,
              input_html: { autocomplete: "restaurant_name" }%>
  <%= f.input :website,
              required: false,
              input_html: { autocomplete: "website" }%>
  <%= f.input :address,
              required: false,
              autofocus: true,
              input_html: { data: { geocoder_target: "address" }, class: "d-none"},
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } }%>
  <%= f.input :phone,
              required: false,
              input_html: { autocomplete: "phone" }%>
  <%= f.input :summary,
              as: :text,
              required: false,
              input_html: { autocomplete: "summary" }%>
  <%= f.input :description,
              as: :text,
              required: false,
              input_html: { autocomplete: "summary" }%>
  <%= f.input :rate,
              required: false,
              input_html: { autocomplete: "rate" }%>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
</div>
