<nav>
    <%= link_to  root_path do %>
      <%= render 'icons/logo'%>
    <% end %>

    <%= render 'shared/searchform' %>

    <% if user_signed_in? %>
      <div class="nav-links">
        <% if current_user.user? %>
          <%= link_to "Restaurants", restaurants_path, class: "nav-link" %>
        <% elsif current_user.restaurant? %>
          <%= link_to "Waiters", waiters_path, class: "nav-link" %>
        <% end %>
        <div class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", user_path, class: "dropdown-item" %>
            <%= link_to "Applications", user_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="nav-links">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        <%= link_to "Sign-up", new_user_registration_path, class: "btn btn-light" %>
      </div>
    <% end %>
</nav>
