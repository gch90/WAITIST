<%= form_tag (current_user.nil? || current_user.waiter?) ? restaurants_path : user_path(tab: 3), class: "search", method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "input",
    placeholder: "Search..."
  %>
  <%= button_tag(class: "btn-search") do %>
    <%= render 'icons/search' %>
  <% end %>
<% end %>
