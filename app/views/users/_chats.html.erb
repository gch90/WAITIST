<div class="d-none">
    <% chatrooms.each do |chatroom| %>
      <div data-controller="chatbox-view">

        <div data-action="click->chatbox-view#showChat">
          <% if current_user.waiter? %>
            <%= chatroom.restaurant.restaurant_name %>
          <% else %>
            <%= chatroom.waiter.nickname %>
          <% end %>
        </div>

        <div data-chatbox-view-target="chatbox" class="d-none">
          <%= render 'shared/chatbox', chatroom: chatroom %>
        </div>

      </div>
    <% end %>
</div>
