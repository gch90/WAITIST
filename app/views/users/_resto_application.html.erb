<div class="application">

  <div class="cards">
    <h3>Waiters you are interested in</h3>
    <% current_user.created_applications.each do |application| %>
      <div class="waiter-card">
        <div class="top">
          <div class="card-head">
            <% if application.waiter.avatar.attached? %>
              <%= cl_image_tag application.waiter.avatar.key %>
            <% end %>
          </div>

          <div class="card-body">
            <h3 class="name"><%= application.waiter.first_name %> <%= application.waiter.last_name %></h3>
            <div class="mid">
              <div class="attr">
                <div class="column">
                  <a><span>Start-date:</span> <%= application.start_time %></a>
                  <a><span>End-date:</span> <%= application.end_time %></a>
                </div>
              </div>
              <div class="bottom">
                <h3><%= application.status.capitalize %></h3>
                <% if Date.today > application.end_time && application.approved? && application.restaurant_comment.nil? && application.restaurant_rating.nil? %>
                  <%= simple_form_for(application, remote: true ) do |f| %>
                    <%= f.input :restaurant_comment, label: "Comment on your experience"  %>
                    <%= f.input :restaurant_rating, label: "Rate your experience"  %>
                    <%= f.submit %>
                  <% end %>
                <% elsif (Date.today > application.end_time && application.approved?) %>
                  <h4>Review completed</h4>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="h-line"></div>
  <div class="cards">
    <h3>Waiters interested in you</h3>
    <% current_user.restaurant_applications_received.each do |application| %>

      <div class="waiter-card">
        <div class="top">
          <div class="card-head">
            <% if application.waiter.avatar.attached? %>
              <%= cl_image_tag application.waiter.avatar.key %>
              <div class="rating">
                <h3> <%= application.waiter.waiter_avg %></h3>
              </div>
            <% end %>
          </div>

          <div class="card-body">
            <h3 class="name"><%= application.waiter.first_name %> <%= application.waiter.last_name %></h3>
            <div class="mid">
              <div class="attr">
                <div class="column">
                  <a><span>Start-date:</span> <%= application.start_time %></a>
                  <a><span>End-date:</span> <%= application.end_time %></a>
                </div>
              </div>
              <div class="card-tail">
                <h3><%= application.status.capitalize %></h3>
                <% if application.status == 'pending' %>
                  <%= link_to "Approve", approve_path(application), method: 'patch', data: { confirm: "Are you sure you want to approve"}, class:"btn btn-primary" %>
                  <%= link_to "Reject", reject_path(application), method: 'patch', data: { confirm: "Are you sure you want to reject"}, class:"btn btn-primary" %>
                <% end %>
                <% if Date.today > application.end_time && application.approved? && application.restaurant_comment.nil? && application.restaurant_rating.nil? %>
                    <%= simple_form_for(application) do |f| %>
                      <%= f.input :restaurant_comment, label: "Comment on your experience"  %>
                      <%= f.input :restaurant_rating, label: "Rate your experience"  %>
                      <%= f.submit %>
                    <% end %>
                <% elsif (Date.today > application.end_time && application.approved?) %>
                  <h4>Review completed</h4>
                <% end %>
                <div class="bottom">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
