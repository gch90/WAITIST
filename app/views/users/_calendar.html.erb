<div class="calendar d-none">
  <h1><%= render "icons/calendar" %>Calendar</h1>
  <%= month_calendar(events: @meetings, end_attribute: :end_time) do |date, meetings| %>
  <%= date %>

  <% meetings.each do |meeting| %>

      <% if current_user.waiter? %>
        <div class="meeting color_<%= meeting.status == "pending" ? 'pending' : meeting.id.to_s[0]  %>">
          <a><%= meeting.restaurant.restaurant_name %></a>
        </div>
      <% else %>
        <div class="meeting color_<%= meeting.status == 'pending' ? 'pending' : meeting.id.to_s[0]  %>">
          <a><%= meeting.waiter.first_name %></a>
        </div>
      <% end %>


  <% end %>
<% end %>
</div>
